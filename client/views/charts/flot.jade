html
  body
    .page(data-ng-controller='flotChartCtrl')
      .panel.panel-default
        .panel-heading
          h3.panel-title Line Chart
        .panel-body
          div(data-flot-chart='', data-data='line1.data', data-options='line1.options', style='width: 100%; height: 300px;')
      .panel.panel-default
        .panel-heading
          h3.panel-title Realtime Chart
        .panel-body(data-ng-controller='flotChartCtrl.realtime')
          div(data-flot-chart-realtime='', data-type='realtime', style='width: 100%; height: 300px;')
      .row
        .col-md-8
          .panel.panel-default
            .panel-heading
              h3.panel-title Line and Area Chart
            .panel-body
              div(data-flot-chart='', data-data='area.data', data-options='area.options', style='width: 100%; height: 300px;')
        .col-md-4
          .panel.panel-default
            .panel-heading
              h3.panel-title Stacked Bar Chart
            .panel-body
              div(data-flot-chart='', data-data='barChart.data', data-options='barChart.options', style='width: 100%; height: 300px;')
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading
              h3.panel-title Pie Chart
            .panel-body
              div(data-flot-chart='', data-data='pieChart.data', data-options='pieChart.options', style='width: 100%; height: 300px;')
        .col-md-6
          .panel.panel-default
            .panel-heading
              h3.panel-title Donut Chart
            .panel-body
              div(data-flot-chart='', data-data='donutChart.data', data-options='donutChart.options', style='width: 100%; height: 300px;')
